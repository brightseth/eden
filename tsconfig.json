{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "packages",
    "apps/**",
    "deployments/**",
    "scripts/**",
    "covenant.disabled.bak",
    "**/*.bak",
    "**/*.backup*",
    "**/*.disabled/**",
    "src/services/creative-pipeline/**",
    "src/services/creator-agent-economics/**",
    "src/lib/token-economics/**",
    "test-*.ts",
    "test-sovereign/**",
    "tests/**"
  ]
}